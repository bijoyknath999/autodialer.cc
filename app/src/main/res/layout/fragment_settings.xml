    <TextView
        android:id="@+id/textdialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/addContact"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textdialer"
        android:background="@drawable/ic_baseline_person_24"
         />

    <TextView
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/textdialer"
        android:layout_marginTop="180dp"
        android:text="Jonson"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/person_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_name"
        android:layout_marginLeft="25dp"
        android:text="USA"
        android:textSize="20dp"
        android:textStyle="normal"></TextView>
    <TextView
        android:id="@+id/person_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_country"
        android:layout_marginLeft="25dp"
        android:text="user@example.com"
        android:textSize="20dp"
        android:textStyle="normal"></TextView>
    <TextView
        android:id="@+id/person_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_email"
        android:layout_marginLeft="25dp"
        android:text="+92345366456"
        android:textSize="20dp"
        android:textStyle="normal"></TextView>

    <TextView
        android:id="@+id/person_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_phone"
        android:layout_marginLeft="25dp"
        android:text="Role: User"
        android:textSize="20dp"
        android:textStyle="normal"></TextView>

    <Button
        android:id="@+id/logout"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_below="@id/person_role"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Logout"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        ></Button>

</RelativeLayout>